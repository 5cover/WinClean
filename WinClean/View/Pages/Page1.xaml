<xctk:WizardPage
    x:Class="Scover.WinClean.View.Pages.Page1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    xmlns:ui="clr-namespace:Scover.WinClean.Resources.UI"
    xmlns:viewModel="clr-namespace:Scover.WinClean.ViewModel"
    xmlns:pages="clr-namespace:Scover.WinClean.ViewModel.Pages"
    x:Name="wizardPage"
    Title="{x:Static ui:Page1.Title}"
    d:DataContext="{d:DesignInstance Type=pages:Page1ViewModel}"
    CanSelectNextPage="{Binding CanSelectNextPage}"
    Description="{x:Static ui:Page1.Description}"
    mc:Ignorable="d">
    <StackPanel>
        <RadioButton
            VerticalAlignment="Center"
            Content="{x:Static ui:Page1.CreateRestorePoint}"
            IsChecked="{Binding CreateRestorePoint}" />
        <ItemsControl Margin="20,10,0,0" ItemsSource="{Binding SystemRestoreEligibleDrives}">
            <ItemsControl.Template>
                <ControlTemplate TargetType="ItemsControl">
                    <StackPanel>
                        <TextBlock Text="{x:Static ui:Page1.DrivesToBackup}" />
                        <ItemsPresenter />
                        <TextBlock Text="{x:Static ui:Page1.SystemRestoreWillBeEnabled}" />
                    </StackPanel>
                </ControlTemplate>
            </ItemsControl.Template>
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type viewModel:DriveInfoViewModel}">
                    <CheckBox Content="{Binding Drive}" IsChecked="{Binding IsSelected}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <RadioButton
            Margin="0,10,0,0"
            Content="{x:Static ui:Page1.DontCreateRestorePoint}"
            IsChecked="{Binding DontCreateRestorePoint}" />
    </StackPanel>
</xctk:WizardPage>
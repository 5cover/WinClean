<Application
  x:Class="Scover.WinClean.Presentation.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:converters="clr-namespace:Scover.WinClean.Presentation.Converters"
  Exit="ApplicationExit"
  Startup="ApplicationStartup">
  <Application.Resources>
    <Style TargetType="Button">
      <Setter Property="MinHeight" Value="24" />
      <Setter Property="MinWidth" Value="85.7" />
      <Setter Property="Padding" Value="15,3,15,3" />
    </Style>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <converters:GoldenRatioConverter x:Key="GoldenRatioConverter" />
    <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
    <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
  </Application.Resources>
</Application>

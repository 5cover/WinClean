<Application
    x:Class="Scover.WinClean.Presentation.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Scover.WinClean.Presentation.Converters"
    Exit="ApplicationExit"
    Startup="ApplicationStartup">
    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="MinHeight" Value="23" />
            <Setter Property="MinWidth" Value="75" />
            <Setter Property="Padding" Value="6,3,6,3" />
        </Style>
        <converters:GoldenRatioConverter x:Key="GoldenRatioConverter" />
        <converters:ToSolidColorBrushConverter x:Key="ToSolidColorBrushConverter" />
    </Application.Resources>
</Application>